{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es6",
      "lib": ["es6", "dom"],
      "noImplicitAny": false,
      "sourceMap": false,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "moduleResolution": "node",
      "noUnusedLocals": true,
      "allowJs": true,
      "outDir": ".build"
    },
    "compileOnSave": true,
    "exclude": [
      "node_modules"
    ]
  }
  